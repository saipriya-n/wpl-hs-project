<%- include ('partials/header') %>

<style>
    #d1 {
        display: inline-block;
    }

    #d2 {
        display: inline-block;
    }
</style>
<section style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                        <p class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4"><%= item.title %></p>
                        <p><b>Category:</b> <%= item.category %></p>
                        <p><b>Description:</b> <%= item.description %></p>
                        <p><b>Price:</b> $<%= item.price %></p>
                        <form action="/cart" method="POST">
                            <div class="form-group">
                                <input name="itemid" class="form-control" placeholder="itemid" type="hidden"  value=<%= item._id %>>
                                <input name="title" class="form-control" placeholder="title" type="hidden"  value=<%= item.title %>>
                                <input name="price" class="form-control" placeholder="price" type="hidden"  value=<%= item.price %>>
                                <input name="image" class="form-control" placeholder="image" type="hidden"  value=<%= item.image %>>
                                <input name="userid" class="form-control" placeholder="userid" type="hidden"  value=<%= user._id %>>
                                <input name="quantity" class="form-control" placeholder="quantity" type="hidden" value=1>
                            </div>
                            <button type="submit" class="form-control btn btn-lg" style="background-color: lightseagreen;">Add to cart</button>
                        </form>
                        <button onclick = "window.location.href='/cart'" style="background-color: lightsalmon;" class=" form-control btn btn-lg">View cart</button>
                        <button onclick = "window.location.href='/'" style="background-color: lightsalmon;" class=" form-control btn btn-lg">Back</button>
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                        <img src="/images/<%= item.image %>" class="img-fluid" alt="image" width="700" height="700" />
                    </div>
                </div>
            </div>
            </div>
         </div>
        </div>
    </div>
  </section>
<%- include ('partials/footer') %>
