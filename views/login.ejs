<!DOCTYPE html>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <style>
    .error {
      background: #fcc;
      border: 2px solid #c99;
    }

  </style>
</head>
<body>
  <section style="background-color: #eee;width: 100%">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                        <p class="h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                        <p class="lead">by entering your username and password.</p><br/>
                         <form class="mx-1 mx-md-4" role="form" action="/login" method="post" id="myForm">
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                <label class="form-label">Username</label>
                                <input type="text" name="username" placeholder="Enter Username" class="form-control" required/>
                              </div>
                            </div>
                            <br />
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                <label class="form-label">Password</label>
                                <input type="password" name="password" id="password" placeholder="Password" class="form-control" required />
                              </div>
                            </div>
                            <br />
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                <label class="form-label">User Type</label>
                                <input type="usertype" name="usertype" placeholder="User Type (admin or customer)" class="form-control" required />
                              </div>
                            </div>
                            <br />
                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                                <a href="/"><button type="button" class="btn btn-primary btn-lg">Cancel</button></a>
                            </div>
                        </form> 
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                      <img src="https://media.istockphoto.com/photos/shopping-online-concept-parcel-or-paper-cartons-with-a-shopping-cart-picture-id1249219777?b=1&k=20&m=1249219777&s=170667a&w=0&h=0dXNU-fjD9aOMmrvlppQhJ9gOqnW9dslKFdYLQN9rnk=" class="img-fluid" alt="Sample image" width="700" height="700" />
                  </div>
                </div>
            </div>
            </div>
         </div>
        </div>
    </div>
  </section>
  <script>
    window.onload = function(){
    var pwd = document.getElementById("password");
    var span2 = document.createElement("span");
    span2.style.display = "none";
    pwd.parentNode.appendChild(span2);

    pwd.onfocus = function(){
        span2.innerHTML = "Should contain at least six characters, one uppercase letter, one number and one special character (!,@,#,$,%,^,&,*,+)";
        span2.style.display = "block";
        pwd.classList.remove('error');
    }

    pwd.onblur = function(){
        span2.style.display = "none";
        pwd.classList.remove('error');

    }
    
    var form = document.getElementById("myForm");
    form.onsubmit = function(e){
        var isValid = true;
        var passwordformat = /^(?=.*?[A-Z])(?=.*?[0-9])(?=.*?[!@#$%^&*+]).{6,}$/;
        
        if(pwd.value.match(passwordformat)){
            span2.style.display = "none";
        }
        else{
            span2.innerHTML = "Invalid password format, you should enter at least six characters, one uppercase letter, one number and one special character (!,@,#,$,%,^,&,*,+)";
            span2.style.display = "block";
            pwd.classList.add('error');
            isValid = false;
        }
        if(!isValid){
            e.preventDefault();
        }
    }
  }
  </script>
</body>
</html>