<%- include ('partials/header') %>
<%- include ('clickall') %>

<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<style>
  th,td {
    padding: 0 60px;
  }
</style>
<div class="container">
    <p class="text-center h3 fw-bold mb-5 mx-1 mx-md-4 mt-4">Your Cart</p>
      <a class="btn btn-info" style=" margin-left:1100px;" href="/logout" >Logout</a>
  <div class="row" style="text-align: center;margin-left: 55px;">
    <section style="background-color: #eee;margin-right:15px;margin-bottom:20px;">
    <table>
    <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Total price</th>
        <th>Options</th>
    </tr>
    <% results.forEach(function(item) { %>
      <tr>
        <th><img src="/images/<%= item.image %>" style="width:200px; height:200px;" class="img-thumbnail"/>
          <p><%= item.title %></p></th>
        <th><%= item.quantity %></th>
        <th><%= item.quantity * item.price %></th>
        <th>
          <form action="/cart/<%= item._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input name="quantity" class="form-control" placeholder="quantity" type="hidden" value=<%= parseInt(item.quantity) + 1 %>>
            </div>
            <button type="submit" class="btn form-control" style="background-color: lightseagreen;">Add one more</button>
          </form>
          <form action="/cart/remove/<%= item._id %>?_method=PUT" method="POST">
            <div class="form-group">
              
              <input name="quantity" class="form-control" placeholder="quantity" type="hidden" value=<%= parseInt(item.quantity) - 1 %>>
            </div>
            <button type="submit" class="btn form-control" style="background-color: lightsalmon;margin-top: 8px;">Remove one</button>
          </form>
          <br />
          <form action="/cart/delete/<%= item._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <button type="submit" class="btn form-control" style="background-color: rgb(253, 82, 82);">Clear item</button>
            </div>
          </form>
          <form action="/checkout" method="POST">
            <div class="form-group">
              <input name="itemid" class="form-control" placeholder="itemid" type="hidden"  value=<%= item._id %>>
              <input name="title" class="form-control" placeholder="title" type="hidden"  value=<%= item.itemname %>>
              <input name="image" class="form-control" placeholder="image" type="hidden"  value=<%= item.image %>>
              <input name="userid" class="form-control" placeholder="userid" type="hidden"  value=<%= user._id %>>
              <input name="quantity" class="form-control" placeholder="quantity" type="hidden" value=<%= parseInt(item.quantity) %>>
              <input name="price" class="form-control" placeholder="price" type="hidden"  value=<%= parseInt(item.quantity)*parseInt(item.price) %>>
            </div>
            <button type="submit" class="btn form-control" style="background-color: lightgreen;">Buy</button>
          </form>
          <br />
          </th>
    </tr>
    <% }); %>
  </table>
</div>
<div>
  <a class="btn form-control" style="background-color: lightgreen;" href="/done" >done</a>
    </section>

  </div>
</div>


<%- include ('partials/footer') %>

              

